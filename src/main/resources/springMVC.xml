<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- springmvc的配置文件，声明controller和其他web相关的对象 -->

    <!-- 组件扫描器，扫描com.xawl.controller包下的注解 -->
    <context:component-scan base-package="com.xawl.jswn.xiandan.controller" />

    <mvc:cors>
        <mvc:mapping path="/**"
         allowed-origins="*"
         allowed-methods="POST,GET,OPTIONS,DELETE,PUT,PATCH"
         allowed-headers="Content-Type,Access-Control-Allow-Headers,Access-Control-Allow-Origin,Authorization,X-Requested-With"
         allow-credentials="true"
        />
    </mvc:cors>

    <!-- 注解驱动
        1.响应ajax请求，返回json
        2.解决静态资源访问问题
     -->
    <mvc:resources mapping="/dist/**" location="/dist/" />
    <mvc:annotation-driven />


</beans>